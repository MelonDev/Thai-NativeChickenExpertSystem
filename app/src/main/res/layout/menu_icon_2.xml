<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/subGridItem"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_centerHorizontal="true"
            android:id="@+id/item_chicken_image2_cardView"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="#FFECB3"
            app:cardElevation="0dp"
            app:cardCornerRadius="20dp"
            android:layout_width="90dp"
            android:layout_height="90dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_chicken_on"
                android:tint="@color/colorPrimary"
                android:layout_margin="8dp"
                />



        </android.support.v7.widget.CardView>

        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/item_chicken_image2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            />

    </RelativeLayout>


    <TextView
        android:id="@+id/subChickenNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pridi_light"
        android:gravity="center_horizontal"
        android:maxWidth="100dp"
        android:text="ชื่อพันธุ์ไก่"
        android:textColor="@color/colorText"
        android:textSize="18dp" />

</LinearLayout>