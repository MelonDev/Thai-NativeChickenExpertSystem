<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/table_card_view_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/pridi"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="ชื่อ"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"

                android:textStyle="bold" />

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/line_de"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                />

            <androidx.cardview.widget.CardView
                android:layout_margin="4dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp">

                    <TableLayout
                        android:id="@+id/food_legacy_table_view"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TableLayout>

                    <TextView
                        android:id="@+id/table_card_view_special_des_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="1.6dp"
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:text="เนื้อข้อความ"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textColor="#ed0000"
                        android:textSize="16dp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/tab_food_detall"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="โปรตีน"
                                android:fontFamily="@font/kanit_light"
                                android:textColor="@color/colorText"
                                android:layout_marginLeft="0dp"
                                android:layout_marginTop="0dp"
                                android:textSize="22dp"
                                />

                            <TextView
                                android:id="@+id/food_detall_a"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:fontFamily="@font/kanit_light"
                                android:textColor="@color/colorText"
                                android:layout_marginLeft="0dp"
                                android:layout_marginTop="0dp"
                                android:textSize="22dp"
                                />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="พลังงาน"
                                android:fontFamily="@font/kanit_light"
                                android:textColor="@color/colorText"
                                android:layout_marginLeft="0dp"
                                android:layout_marginTop="0dp"
                                android:textSize="22dp"
                                />

                            <TextView
                                android:id="@+id/food_detall_b"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 kcal/kg"
                                android:fontFamily="@font/kanit_light"
                                android:textColor="@color/colorText"
                                android:layout_marginLeft="0dp"
                                android:layout_marginTop="0dp"
                                android:textSize="22dp"
                                />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="แคลเซียม"
                                android:fontFamily="@font/kanit_light"
                                android:textColor="@color/colorText"
                                android:layout_marginLeft="0dp"
                                android:layout_marginTop="0dp"
                                android:textSize="22dp"
                                />

                            <TextView
                                android:id="@+id/food_detall_c"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:fontFamily="@font/kanit_light"
                                android:textColor="@color/colorText"
                                android:layout_marginLeft="0dp"
                                android:layout_marginTop="0dp"
                                android:textSize="22dp"
                                />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ฟอสฟอรัส"
                                android:fontFamily="@font/kanit_light"
                                android:textColor="@color/colorText"
                                android:layout_marginLeft="0dp"
                                android:layout_marginTop="0dp"
                                android:textSize="22dp"
                                />

                            <TextView
                                android:id="@+id/food_detall_d"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:fontFamily="@font/kanit_light"
                                android:textColor="@color/colorText"
                                android:layout_marginLeft="0dp"
                                android:layout_marginTop="0dp"
                                android:textSize="22dp"
                                />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="เกลือ"
                                android:fontFamily="@font/kanit_light"
                                android:textColor="@color/colorText"
                                android:layout_marginLeft="0dp"
                                android:layout_marginTop="0dp"
                                android:textSize="22dp"
                                />

                            <TextView
                                android:id="@+id/food_detall_e"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:fontFamily="@font/kanit_light"
                                android:textColor="@color/colorText"
                                android:layout_marginLeft="0dp"
                                android:layout_marginTop="0dp"
                                android:textSize="22dp"
                                />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>





</RelativeLayout>