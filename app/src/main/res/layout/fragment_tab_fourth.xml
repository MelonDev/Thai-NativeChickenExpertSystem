<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ededed"
    tools:context="th.ac.up.agr.thai_nativechickenexpertsystem.Fragment.TabFourthFragment">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:elevation="0dp">


        <RelativeLayout
            app:layout_scrollFlags="scroll"
            android:layout_width="match_parent"
            android:minHeight="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:background="@color/colorPrimary">



            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/detail_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="0dp"
                android:fontFamily="@font/pridi_medium"
                android:paddingBottom="0dp"
                android:paddingRight="0dp"
                android:text="@string/tab_4"
                android:textColor="#FFFFFF"
                android:textSize="24dp" />


        </RelativeLayout>

       <LinearLayout
           android:visibility="gone"
           app:layout_scrollFlags="scroll"
           android:background="#ededed"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               app:layout_scrollFlags="scroll"
               android:visibility="visible"
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="50dp">

               <TextView
                   android:textColor="@color/colorText"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="16dp"
                   android:layout_centerVertical="true"
                   android:fontFamily="@font/pridi_medium"
                   android:layout_alignParentLeft="true"
                   android:text="วัคซีน"
                   android:textSize="26dp" />

               <ImageView
                   android:visibility="gone"
                   android:layout_marginLeft="10dp"
                   android:rotation="270"
                   android:layout_centerVertical="true"
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:src="@drawable/ic_back2"
                   android:tint="@color/colorText"
                   android:layout_gravity="center_vertical"
                   />

           </LinearLayout>

           <android.support.constraint.ConstraintLayout
               android:layout_gravity="center_horizontal"
               android:maxWidth="500dp"
               android:background="#ededed"
               android:layout_marginTop="6dp"
               app:layout_scrollFlags="scroll"
               android:layout_width="match_parent"
               android:layout_height="50dp">
               <RelativeLayout
                   android:id="@+id/secondLeftTab"
                   android:layout_width="0dp"
                   android:layout_height="50dp"
                   android:layout_marginStart="0dp"
                   android:layout_marginTop="0dp"
                   app:layout_constraintEnd_toStartOf="@+id/guideline"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent" >

                   <android.support.v7.widget.CardView
                       android:layout_marginTop="0dp"
                       android:layout_marginLeft="16dp"
                       android:layout_marginRight="8dp"
                       app:cardElevation="0dp"
                       app:cardBackgroundColor="@color/colorWhite"
                       app:cardCornerRadius="10dp"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">

                       <LinearLayout
                           android:visibility="visible"
                           android:paddingRight="0dp"
                           android:layout_gravity="center"
                           android:layout_centerInParent="true"
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent">


                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="ชนิดวัคซีน"
                               android:fontFamily="@font/pridi_extralight"
                               android:textSize="20dp"
                               android:padding="5dp"
                               android:textColor="@color/colorPrimaryDark"
                               android:layout_gravity="center"
                               />

                       </LinearLayout>


                   </android.support.v7.widget.CardView>



               </RelativeLayout>

               <android.support.constraint.Guideline
                   android:id="@+id/guideline"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   app:layout_constraintGuide_percent="0.4" />

               <RelativeLayout
                   android:id="@+id/secondRightTab"
                   android:layout_width="0dp"
                   android:layout_height="50dp"
                   android:layout_marginStart="0dp"
                   android:layout_marginTop="0dp"
                   app:layout_constraintStart_toEndOf="@id/guideline"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="parent" >

                   <android.support.v7.widget.CardView
                       android:layout_marginTop="0dp"
                       android:layout_marginLeft="8dp"
                       android:layout_marginRight="16dp"
                       app:cardElevation="0dp"
                       app:cardBackgroundColor="@color/colorWhite"
                       app:cardCornerRadius="10dp"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">


                       <LinearLayout
                           android:visibility="visible"
                           android:layout_gravity="center"
                           android:paddingRight="0dp"

                           android:layout_centerInParent="true"
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="ตำแหน่งการฉีดวัคซีน"
                               android:fontFamily="@font/pridi_extralight"
                               android:textSize="20dp"
                               android:padding="5dp"
                               android:textColor="@color/colorPrimaryDark"
                               android:layout_gravity="center"
                               />

                       </LinearLayout>

                   </android.support.v7.widget.CardView>



               </RelativeLayout>
           </android.support.constraint.ConstraintLayout>

           <LinearLayout
               app:layout_scrollFlags="enterAlways"
               android:visibility="visible"
               android:layout_marginTop="16dp"
               android:layout_width="match_parent"
               android:layout_height="50dp">

               <TextView
                   android:textColor="@color/colorText"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="16dp"
                   android:layout_centerVertical="true"
                   android:fontFamily="@font/pridi_medium"
                   android:layout_alignParentLeft="true"
                   android:text="โรคที่สำคัญ"
                   android:textSize="26dp" />

               <ImageView
                   android:visibility="gone"
                   android:layout_marginLeft="10dp"
                   android:rotation="270"
                   android:layout_centerVertical="true"
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:src="@drawable/ic_back2"
                   android:tint="@color/colorText"
                   android:layout_gravity="center_vertical"
                   />

           </LinearLayout>

           <RelativeLayout
               android:visibility="gone"
               android:layout_marginTop="16dp"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:layout_marginBottom="0dp"
               android:background="#32000000"
               android:layout_marginLeft="31dp"
               android:layout_marginRight="31dp"
               />

           <ImageView
               android:visibility="gone"
               android:layout_marginTop="16dp"
               android:layout_marginLeft="31dp"
               android:layout_marginRight="31dp"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:src="@drawable/line_1"
               android:layout_alignParentBottom="true"
               />

       </LinearLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:paddingTop="16dp"
        android:id="@+id/disease_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:clipToPadding="false"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:drawSelectorOnTop="false"
        android:listSelector="@android:color/transparent"
        android:visibility="visible"
        app:layoutManager="LinearLayoutManager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:listitem="@layout/new_list_recyclerview"

        />


</android.support.design.widget.CoordinatorLayout>
