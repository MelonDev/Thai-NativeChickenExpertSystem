<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="th.ac.up.agr.thai_nativechickenexpertsystem.Fragment.TabFirstFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/colorPrimary"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/pridi_medium"
            android:text="@string/tab_1"
            android:textColor="#FFFFFF"
            android:textSize="48dp" />

        <LinearLayout
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/tab1_menu_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:id="@+id/tab1_menu_on"
                    android:visibility="visible"
                    app:contentPadding="10dp"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/colorWhite"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/menu_on"
                        android:tint="@color/colorPrimary"
                        />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/tab1_menu_off"
                    android:visibility="gone"
                    app:contentPadding="10dp"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/menu_off"
                        android:tint="@color/colorWhite"
                        />

                </android.support.v7.widget.CardView>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/tab1_list_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:id="@+id/tab1_list_off"
                    android:visibility="visible"
                    android:layout_marginLeft="10dp"
                    app:contentPadding="10dp"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/list_off"
                        android:tint="@color/colorWhite"
                        />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/tab1_list_on"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    app:contentPadding="10dp"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/colorWhite"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/list_on"
                        android:tint="@color/colorPrimary"
                        />

                </android.support.v7.widget.CardView>


            </RelativeLayout>


        </LinearLayout>




    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:drawSelectorOnTop="false"
        app:layoutManager="LinearLayoutManager"
        android:listSelector="@android:color/transparent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:listitem="@layout/menu_recyclerview"

        />
</LinearLayout>
