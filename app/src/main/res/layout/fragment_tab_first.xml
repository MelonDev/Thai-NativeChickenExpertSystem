<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="th.ac.up.agr.thai_nativechickenexpertsystem.Fragment.TabFirstFragment">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorPrimary"
            app:layout_scrollFlags="scroll"
            >

            <RelativeLayout
                android:layout_marginBottom="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <ImageView
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/chicken_wall" />


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/statusbar_overlay"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="68dp"
                android:layout_marginLeft="0dp"
                android:fontFamily="@font/kanit_extralight"
                android:paddingLeft="16dp"
                android:text="@string/tab_1"
                android:textColor="#FFFFFF"
                android:textSize="48dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="80dp"
                android:layout_marginRight="16dp"
                android:visibility="visible">


                <RelativeLayout
                    android:id="@+id/tab1_menu_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:id="@+id/tab1_menu_on"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:visibility="visible"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:contentPadding="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/menu_on"
                            android:tint="@color/colorPrimary" />

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/tab1_menu_off"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:contentPadding="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/menu_off"
                            android:tint="@color/colorWhite" />

                    </android.support.v7.widget.CardView>


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/tab1_list_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:id="@+id/tab1_list_off"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:layout_marginLeft="10dp"
                        android:visibility="visible"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:contentPadding="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/list_off"
                            android:tint="@color/colorWhite" />

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/tab1_list_on"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:layout_marginLeft="10dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:contentPadding="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/list_on"
                            android:tint="@color/colorPrimary" />

                    </android.support.v7.widget.CardView>


                </RelativeLayout>


            </LinearLayout>

            <RelativeLayout
                android:background="@android:color/transparent"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="60dp">


                <RelativeLayout
                    android:visibility="gone"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#33000000" />

                <android.support.v7.widget.CardView
                    android:id="@+id/main_searchbtn"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#46000000"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:cardCornerRadius="12dp"
                    >

                    <ImageView
                        android:alpha="0.64"
                        android:tint="#ffffff"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:src="@drawable/ic_magnifying"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center_vertical"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ค้นหา"
                        android:textColor="#a4ffffff"
                        android:fontFamily="@font/pridi"
                        android:layout_marginLeft="60dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="22dp"

                        />

                </android.support.v7.widget.CardView>

            </RelativeLayout>

        </RelativeLayout>

</android.support.design.widget.AppBarLayout>


<android.support.v7.widget.RecyclerView
android:id="@+id/main_menu_vertical_recycler_view"
android:visibility="gone"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_marginLeft="0dp"
android:layout_marginRight="0dp"
android:layout_marginTop="0dp"
android:drawSelectorOnTop="false"
app:layoutManager="LinearLayoutManager"
android:listSelector="@android:color/transparent"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:listitem="@layout/menu_recyclerview"

    />

<android.support.v7.widget.RecyclerView
android:id="@+id/main_list_vertical_recycler_view"
android:visibility="visible"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_marginLeft="0dp"
android:layout_marginRight="0dp"
android:layout_marginTop="0dp"
android:drawSelectorOnTop="false"
app:layoutManager="LinearLayoutManager"
android:listSelector="@android:color/transparent"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:listitem="@layout/list_recyclerview"

    />

    </android.support.design.widget.CoordinatorLayout>
