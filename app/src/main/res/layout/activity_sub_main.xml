<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="th.ac.up.agr.thai_nativechickenexpertsystem.SubMainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">



            <RelativeLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:minHeight="?attr/actionBarSize"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                >

                <RelativeLayout
                    android:layout_centerVertical="true"
                    android:paddingLeft="6dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="2dp"
                    android:id="@+id/sub_back_btn"
                    android:paddingRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/back"
                        />

                    <TextView
                        android:paddingTop="2dp"
                        android:paddingBottom="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="กลับ"
                        android:textColor="@color/colorWhite"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:textSize="22dp"
                        android:fontFamily="@font/pridi_extralight"
                        />

                </RelativeLayout>

                <TextView
                    android:maxWidth="200dp"
                    android:gravity="center_horizontal"
                    android:id="@+id/sub_title_name"
                    android:paddingBottom="0dp"
                    android:paddingRight="0dp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/pridi_medium"
                    android:text="@string/tab_1"
                    android:textColor="#FFFFFF"
                    android:textSize="24dp" />

                <LinearLayout
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:layout_marginBottom="0dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:id="@+id/tab1_menu_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.CardView
                            android:id="@+id/tab1_menu_on"
                            android:visibility="visible"
                            app:contentPadding="7dp"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="8dp"
                            app:cardBackgroundColor="@color/colorWhite"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/menu_on"
                                android:tint="@color/colorPrimary"
                                />

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/tab1_menu_off"
                            android:visibility="gone"
                            app:contentPadding="7dp"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="8dp"
                            app:cardBackgroundColor="@color/colorPrimary"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/menu_off"
                                android:tint="@color/colorWhite"
                                />

                        </android.support.v7.widget.CardView>


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/tab1_list_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.CardView
                            android:id="@+id/tab1_list_off"
                            android:visibility="visible"
                            android:layout_marginLeft="10dp"
                            app:contentPadding="7dp"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="8dp"
                            app:cardBackgroundColor="@color/colorPrimary"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/list_off"
                                android:tint="@color/colorWhite"
                                />

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/tab1_list_on"
                            android:visibility="gone"
                            android:layout_marginLeft="10dp"
                            app:contentPadding="7dp"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="8dp"
                            app:cardBackgroundColor="@color/colorWhite"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/list_on"
                                android:tint="@color/colorPrimary"
                                />

                        </android.support.v7.widget.CardView>


                    </RelativeLayout>


                </LinearLayout>




            </RelativeLayout>

    </android.support.design.widget.AppBarLayout>



    <android.support.v7.widget.RecyclerView
        android:paddingTop="10dp"
        android:id="@+id/sub_menu_vertical_recycler_view"
        android:visibility="gone"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        app:spanCount="3"
        android:drawSelectorOnTop="false"
        app:layoutManager="GridLayoutManager"
        android:listSelector="@android:color/transparent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:listitem="@layout/menu_icon_2"

        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sub_list_vertical_recycler_view"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:drawSelectorOnTop="false"
        app:layoutManager="LinearLayoutManager"
        android:listSelector="@android:color/transparent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:listitem="@layout/list_recyclerview"

        />


</android.support.design.widget.CoordinatorLayout>
