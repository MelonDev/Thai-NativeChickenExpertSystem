<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ededed"
    tools:context="th.ac.up.agr.thai_nativechickenexpertsystem.Fragment.TabThirdFragment">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:elevation="0dp">


        <RelativeLayout
            app:layout_scrollFlags="scroll"
            android:layout_width="match_parent"
            android:minHeight="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:background="@color/colorPrimary">



            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/detail_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="0dp"
                android:fontFamily="@font/pridi_medium"
                android:paddingBottom="0dp"
                android:paddingRight="0dp"
                android:text="@string/tab_3_full"
                android:textColor="#FFFFFF"
                android:textSize="24dp" />


        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="56dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:visibility="gone"
            app:cardElevation="00dp"
            android:layout_margin="16dp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </android.support.v7.widget.CardView>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:visibility="visible"
        android:id="@+id/main_action_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        android:layout_gravity="right|bottom"
        android:layout_margin="16dp"
        >

        <LinearLayout
            android:layout_gravity="center"
            android:paddingRight="28dp"
            android:paddingLeft="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="visible"
                android:layout_gravity="center"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_add_2"
                />
            <TextView
                android:layout_marginLeft="0dp"
                android:visibility="gone"
                android:fontFamily="@font/pridi_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="เพิ่มรายการ"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                />
        </LinearLayout>





    </android.support.v7.widget.CardView>



</FrameLayout>
